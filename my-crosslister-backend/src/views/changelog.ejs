    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tagButtons = document.querySelectorAll('.tag-filter');
            const entries = document.querySelectorAll('.entry');

            function filterEntries() {
                const activeTags = Array.from(tagButtons)
                    .filter(btn => btn.classList.contains('active'))
                    .map(btn => {
                        if (btn.classList.contains('tag-bugfix')) return 'bugfix';
                        if (btn.classList.contains('tag-deprecation')) return 'deprecation';
                        if (btn.classList.contains('tag-improvement')) return 'improvement';
                        if (btn.classList.contains('tag-newfeature')) return 'newfeature';
                        return '';
                    });

                entries.forEach(entry => {
                    if (activeTags.length === 0) {
                        entry.classList.remove('hidden');
                    } else {
                        const entryTags = entry.dataset.tags.split(' ');
                        const matches = activeTags.some(tag => entryTags.includes(tag));
                        if (matches) {
                            entry.classList.remove('hidden');
                        } else {
                            entry.classList.add('hidden');
                        }
                    }
                });
            }

            tagButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    btn.classList.toggle('active');
                    filterEntries();
                });
            });

            // Initial: show all
            filterEntries();
        });
    </script>
