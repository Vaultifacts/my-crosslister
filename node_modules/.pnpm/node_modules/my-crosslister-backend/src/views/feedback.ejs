            <a href="/settings">‚öôÔ∏è Settings</a>
        </div>
        <div class="help-user">
            <button id="help-btn" class="help-btn">üõü Help</button>
            <button id="avatar-btn" class="avatar-btn">
                <% const email = (user && user.email) ? user.email : 'user@example.com'; %>
                <%= email.charAt(0).toUpperCase() %>
            </button>
        </div>
    </div>

    <div id="help-dropdown" class="help-dropdown">
        <div class="help-item">Report Bug</div>
        <div class="help-item" onclick="window.location.href='/feedback'">Submit Feedback</div>
        <div class="help-item">Roadmap</div>
