    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Avatar dropdown
            const avatarBtn = document.getElementById('avatar-btn');
            const userDropdown = document.getElementById('user-dropdown');
            if (avatarBtn && userDropdown) {
                avatarBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
                document.addEventListener('click', () => userDropdown.classList.remove('active'));
            }

            // Help dropdown toggle
            const helpBtn = document.getElementById('help-btn');
            const helpDropdown = document.getElementById('help-dropdown');
            if (helpBtn && helpDropdown) {
                helpBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    helpDropdown.classList.toggle('active');
                });
                document.addEventListener('click', (e) => {
                    if (!helpDropdown.contains(e.target) && e.target !== helpBtn) {
                        helpDropdown.classList.remove('active');
                    }
                });
            }

            // New Listing dropdown
            const newListingBtn = document.getElementById('new-listing-btn');
            const newListingDropdown = document.getElementById('new-listing-dropdown');
            if (newListingBtn && newListingDropdown) {
                newListingBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    newListingDropdown.classList.toggle('active');
                });
                document.addEventListener('click', (e) => {
                    if (!newListingDropdown.contains(e.target)) {
                        newListingDropdown.classList.remove('active');
                    }
                });
            }

            // Sidebar popup toggle
            const hamburgerBtn = document.getElementById('hamburger-btn');
            const sidebarPopup = document.getElementById('sidebar-popup');
            if (hamburgerBtn && sidebarPopup) {
                hamburgerBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    sidebarPopup.classList.toggle('active');
                });
                document.addEventListener('click', (e) => {
                    if (!sidebarPopup.contains(e.target) && e.target !== hamburgerBtn) {
                        sidebarPopup.classList.remove('active');
                    }
                });
            }

            // Filters panel
            const filtersBtn = document.getElementById('filters-btn');
            const filtersPanel = document.getElementById('filters-panel');
            if (filtersBtn && filtersPanel) {
                filtersBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    filtersPanel.classList.toggle('active');
                });
                document.addEventListener('click', (e) => {
                    if (!filtersPanel.contains(e.target) && e.target !== filtersBtn) {
                        filtersPanel.classList.remove('active');
                    }
                });
            }

            // Fullscreen button
            const fullscreenBtn = document.getElementById('fullscreen-btn');
            const fullscreenIcon = document.getElementById('fullscreen-icon');
            function toggleFullscreen() {
                if (!document.fullscreenElement) {
                    document.documentElement.requestFullscreen().catch(err => {
                        console.error(`Error attempting to enable fullscreen: ${err.message}`);
                    });
                } else {
                    document.exitFullscreen();
                }
            }
            fullscreenBtn.addEventListener('click', toggleFullscreen);
            document.addEventListener('fullscreenchange', () => {
                if (document.fullscreenElement) {
                    fullscreenIcon.textContent = '‚Üô';
                } else {
                    fullscreenIcon.textContent = '‚õ∂';
                }
            });

            // Auto-merge modal
            const autoMergeBtn = document.getElementById('auto-merge-btn');
            const autoMergeModal = document.getElementById('auto-merge-modal');
            const modalClose = document.getElementById('modal-close');

            autoMergeBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                autoMergeModal.classList.add('active');
            });

            modalClose.addEventListener('click', () => {
                autoMergeModal.classList.remove('active');
            });

            autoMergeModal.addEventListener('click', (e) => {
                if (e.target === autoMergeModal) {
                    autoMergeModal.classList.remove('active');
                }
            });

            // Chat modal toggle
            const messageBtn = document.getElementById('floating-message-btn');
            const chatModal = document.getElementById('chat-modal');
            const chatClose = document.getElementById('chat-close');

            if (messageBtn && chatModal) {
                messageBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    chatModal.classList.toggle('active');
                });

                chatClose.addEventListener('click', () => {
                    chatModal.classList.remove('active');
                });

                document.addEventListener('click', (e) => {
                    if (chatModal.classList.contains('active') && !chatModal.contains(e.target) && e.target !== messageBtn) {
                        chatModal.classList.remove('active');
                    }
                });
            }

            // Filter creation and filtering logic
            const filtersContainer = document.getElementById('filters-container');
            function createFilterRow() {
                const row = document.createElement('div');
                row.className = 'filter-row';
                row.innerHTML = `
                    <button class="remove-filter">√ó</button>
                    <select class="column-select">
                        <option value="title">Name</option>
                        <option value="sku">SKU</option>
                        <option value="price">Price</option>
                        <option value="source">Marketplace</option>
                        <option value="tags">Tags</option>
                        <option value="status">Status</option>
                        <option value="createdAt">Created At</option>
                    </select>
                    <select class="operator-select">
                        <option value="contains">contains</option>
                        <option value="equals">equals</option>
                        <option value="starts">starts with</option>
                        <option value="ends">ends with</option>
                        <option value="empty">is empty</option>
                        <option value="notempty">is not empty</option>
                        <option value="any">is any of</option>
                    </select>
                    <input type="text" class="value-input" placeholder="Filter value">
                `;
                filtersContainer.appendChild(row);

                row.querySelector('.remove-filter').addEventListener('click', () => {
                    row.remove();
                    applyFilters();
                });

                row.querySelectorAll('select, input').forEach(el => {
                    el.addEventListener('change', applyFilters);
                    el.addEventListener('input', applyFilters);
                });
            }

            filtersBtn.addEventListener('click', () => {
                if (filtersContainer.children.length === 0) {
                    createFilterRow();
                }
            });

            const addFilterBtn = document.getElementById('add-filter-btn');
            addFilterBtn.addEventListener('click', createFilterRow);

            function applyFilters() {
                const rows = document.querySelectorAll('tbody tr:not(.empty-message)');
                const filters = document.querySelectorAll('.filter-row');

                rows.forEach(row => {
                    let match = true;

                    filters.forEach(filter => {
                        const column = filter.querySelector('.column-select').value;
                        const operator = filter.querySelector('.operator-select').value;
                        const value = filter.querySelector('.value-input').value.trim().toLowerCase();

                        let cellValue = '';
                        if (column === 'title') cellValue = (row.cells[2].textContent || '').toLowerCase();
                        else if (column === 'sku') cellValue = (row.cells[3].textContent || '').toLowerCase();
                        else if (column === 'price') cellValue = (row.cells[4].textContent || '').toLowerCase();
                        else if (column === 'source') cellValue = (row.cells[5].textContent || '').toLowerCase();
                        else if (column === 'tags') cellValue = (row.cells[6].textContent || '').toLowerCase();
                        else if (column === 'status') cellValue = (row.cells[7].textContent || '').toLowerCase();
                        else if (column === 'createdAt') cellValue = (row.cells[8].textContent || '').toLowerCase();

                        let rowMatch = true;
                        if (operator === 'contains') rowMatch = cellValue.includes(value);
                        else if (operator === 'equals') rowMatch = cellValue === value;
                        else if (operator === 'starts') rowMatch = cellValue.startsWith(value);
                        else if (operator === 'ends') rowMatch = cellValue.endsWith(value);
                        else if (operator === 'empty') rowMatch = cellValue.trim() === '' || cellValue === '-';
                        else if (operator === 'notempty') rowMatch = cellValue.trim() !== '' && cellValue !== '-';
                        else if (operator === 'any') rowMatch = true;

                        if (!rowMatch) match = false;
                    });

                    row.classList.toggle('hidden', !match);
                });
            }
        });
    </script>
