            margin: 40px auto;
            padding: 0 20px;
            display: flex;
            gap: 40px;
        }
        .board-main {
            flex: 2;
        }
        .board-header {
            background: #f8f9fa;
            padding: 24px;
            border-radius: 12px;
            margin-bottom: 30px;
        }
        .board-title {
            font-size: 26px;
            font-weight: bold;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .board-subtitle {
            color: #666;
            font-size: 16px;
        }
        .controls-row {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 40px;
            flex-wrap: wrap;
        }
        .filter-select {
            padding: 10px 14px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background: white;
            font-size: 14px;
        }
        .search-bar {
            padding: 10px 14px;
            border: 1px solid #ddd;
            border-radius: 6px;
            width: 320px;
            font-size: 14px;
        }
        .submit-bug-btn {
            background: #343a40;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 1px 4px rgba(0,0,0,0.05);
        }
        .empty-icon {
            font-size: 48px;
            color: #ccc;
            margin-bottom: 20px;
        }
        .empty-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 12px;
            color: #444;
        }
        .empty-text {
            color: #666;
            margin-bottom: 30px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }
        .sidebar {
            flex: 1;
            min-width: 280px;
        }
        .boards-header {
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .board-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 12px;
            cursor: pointer;
            font-size: 15px;
        }
        .board-item.active {
            background: white;
            border: 2px solid #007bff;
            font-weight: bold;
        }
        .board-item .plus {
            margin-left: auto;
            font-weight: bold;
            color: #007bff;
        }
        .powered-by {
            text-align: center;
            color: #999;
            font-size: 14px;
            margin-top: 80px;
        }
